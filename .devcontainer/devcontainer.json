{
  "name": "ROS2 Humble Workspace",
  "image": "osrf/ros:humble-desktop",
  "remoteUser": "root",

  "runArgs": [
    "--privileged"
  ],

  "postCreateCommand": "bash /workspaces/Robot_MiniProject/.devcontainer/post_create.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker",
        "twxs.cmake"
      ]
    }
  }
}
